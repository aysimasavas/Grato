<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/linearLayoutRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

        <TextView
            android:id="@+id/note_date_text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:text="16 02 2021"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/gratitude_text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:text="Bugün ne için minnettarsın?"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaaaaaaa"
            android:padding="16dp"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_below="@id/linearLayoutRow">

        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:layout_below="@id/text_home"
            />


    </RelativeLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:fabCustomSize="56dp"
        app:maxImageSize="28dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/add_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:backgroundTint="#C8E6C9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_menu"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:fabCustomSize="56dp"
        app:maxImageSize="28dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/search_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:foregroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/search_fab_color"

        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintEnd_toEndOf="@+id/add_button"

        app:srcCompat="@drawable/ic_baseline_search_24"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:fabCustomSize="56dp"
        app:maxImageSize="28dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/settings_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/settings_fab_color"
        app:layout_constraintBottom_toTopOf="@+id/calendar_button"
        app:layout_constraintEnd_toEndOf="@+id/calendar_button"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calendar_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:fabCustomSize="56dp"
        app:maxImageSize="28dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calender_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/calender_fab_color"
        app:layout_constraintBottom_toTopOf="@+id/search_button"
        app:layout_constraintEnd_toEndOf="@+id/search_button"
        app:srcCompat="@drawable/ic_calen"
        app:tint="@null" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>