<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NoteFragment"
    android:background="?attr/BackgroundColorAll">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/didact_gothic"

            android:text="12 02 2021"
            android:textColor="?attr/textColorAll"
            android:textSize="30sp">

        </TextView>

        <TextView
            android:id="@+id/textTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateText"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/didact_gothic"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/minnettard_m"
            android:textColor="?attr/textColorAll"
            android:textSize="36sp">

        </TextView>


        <ImageView
            android:id="@+id/shareImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@id/noteText"
            android:layout_alignStart="@id/noteText"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_sharep" />

        <EditText

            android:id="@+id/noteText"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_below="@id/textTittle"
            android:layout_margin="20dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/QuestionsString"
            android:inputType="textMultiLine"
            android:textColor="?attr/textColorAll"
            android:textColorHint="?attr/HintTextColor"
            android:textSize="20sp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteText"
            android:layout_alignEnd="@id/noteText"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/didact_gothic"
            android:background="@drawable/button_custom"
            android:backgroundTint="?attr/buttonColorAll"

            android:padding="10dp"
            android:text="@string/kaydet"
            android:textColor="@color/white"
            android:textSize="14sp">

        </Button>



    </RelativeLayout>


</RelativeLayout>