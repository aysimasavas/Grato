<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calender_custom"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="20dp">


    <CalendarView
        android:id="@+id/calendarView2"
        android:layout_width="320dp"
        android:layout_height="365dp"


        android:backgroundTint="@color/black"
        android:dateTextAppearance="@style/CalenderViewDateCustomText"
        android:scrollbarTrackHorizontal="@color/black"
        android:selectedDateVerticalBar="@color/home_color_icon"
        android:selectedWeekBackgroundColor="#FFFFFF"
        android:theme="@style/CalenderViewCustom"
        android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
        android:weekSeparatorLineColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268"
        tools:layout_editor_absoluteX="54dp" />

    <Button
        android:id="@+id/noBtn"
        android:layout_width="99dp"
        android:layout_height="26dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_custom"
        android:backgroundTint="#E91E63"
        android:text="@string/noButtonString"

        android:textColor="@color/white"
        android:textColorLink="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView2"
        app:layout_constraintEnd_toEndOf="@+id/calendarView2"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/calendarView2"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>