<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navigation"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-50dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        app:fabCustomSize="72dp"
        app:maxImageSize="36dp"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/add_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/white"
        app:backgroundTint="#C8E6C9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_daisy"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/search_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:foregroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/search_fab_color"
        app:fabCustomSize="72dp"
        app:layout_constraintBottom_toTopOf="@+id/add_button"
        app:layout_constraintEnd_toEndOf="@+id/add_button"
        app:maxImageSize="36dp"
        app:srcCompat="@drawable/ic_baseline_search_24"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settings_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/settings_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/settings_fab_color"

        app:fabCustomSize="72dp"
        app:layout_constraintBottom_toTopOf="@+id/calendar_button"
        app:layout_constraintEnd_toEndOf="@+id/calendar_button"
        app:maxImageSize="36dp"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        app:tint="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/calendar_button"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/calender_fab_color"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:visibility="invisible"
        app:backgroundTint="@color/calender_fab_color"
        app:fabCustomSize="72dp"
        app:layout_constraintBottom_toTopOf="@+id/search_button"
        app:layout_constraintEnd_toEndOf="@+id/search_button"
        app:maxImageSize="36dp"
        app:srcCompat="@drawable/ic_calen"
        app:tint="@null" />


</androidx.constraintlayout.widget.ConstraintLayout>